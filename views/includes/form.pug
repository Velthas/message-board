main
  form(method="POST" action="/new")
    section
      label(for="messageContent") Message:
      input(name="messageContent" id="messageContent" type="text" placeholder="Add your text here" required='true')
    section
      label(for="messageColorHex") Color:
      div.color-wrapper(style='background-color: #ffa502')
        input(name="messageColorHex" id="messageColorHex" type="color" value="#ffa502" required='true' onchange='handleColorChange(event)')
    button(type="submit") Submit

  script.
    function handleColorChange(e) {
      const targetHex = e.target.value;
      const colorInputWrapper = document.querySelector('div.color-wrapper');
      const submitButton = document.querySelector('form button');
      colorInputWrapper.style.backgroundColor = targetHex;      
    }